{
    "manifest_version": 3,
    "name": "Image CAPTCHA Solver",
    "version": "1.0",
    "description": "Detects an image CAPTCHA, extracts its text, and fills the form.",
    "permissions": ["activeTab", "tabs", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["tesseract.min.js", "content.js"]
      }
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/groot16.png",
        "48": "icons/groot48.png",
        "128": "icons/groot128.png"
      }
    },
    "host_permissions": ["<all_urls>"]
  }
  